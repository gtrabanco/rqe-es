<!doctype html>
<html>
    <head>
        <title>RQE.es - Url Shortener</title>
        <script src='https://www.google.com/recaptcha/api.js'></script>
    </head>

    <link rel="stylesheet" href="css/bootstrap.min.css" />
    <link rel="stylesheet" href="css/bootstrap-theme.min.css" />
    <link rel="stylesheet" href="css/custom.css" />

    <link href="https://fonts.googleapis.com/css?family=Black+Ops+One|Cutive+Mono&amp;subset=latin-ext" rel="stylesheet">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-fork-ribbon-css/0.2.0/gh-fork-ribbon.min.css" />
    <!--[if lt IE 9]>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-fork-ribbon-css/0.2.0/gh-fork-ribbon.ie.min.css" />
    <![endif]-->
    <body>
    <a class="github-fork-ribbon right-top blue" href="https://github.com/gtrabanco/rqe-es" title="Fork me on GitHub">Fork me on GitHub</a>
    
    <div class="page-header col-md-10 col-xs-12">
        <header>
            <h1>RQE.es</h1>
            <h2>Simple url shortener with <a href="https://nodejs.org">Node</a>, <a href="https://www.mongodb.com/">MongoDB</a> and
                <a href="https://docker.com">Docker</a></h2>
        </header>
    </div>

    <div class="col-md-10 col-xs-12">
        <form action="/" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">

            <% if(typeof status !== 'undefined' && status == 200) { %>
            <div class="alert alert-success">
                <p>Short URL: <a href="<%= data.url %>"><%= data.url %></a></p>
            </div>
            <% } %>

            <% if(typeof status !== 'undefined' && status != 200) { %>
            <div class="alert alert-danger">
                <p>Error: <%= data.message %></p>
            </div>
            <% } %>

            <div class="form-group">
                <label class="sr-only" for="url">Long Url:</label>
                <input type="text" placeholder="https://" id="url" name="url" class="form-control" aria-describedby="helpUrl">
                <span id="helpUrl" class="help-block">You must write a valid url with http/https or ftp.</span>
            </div>

            <% if (recaptcha) { %>
            <div class="form-group">
                <label class="sr-only" for="g-recaptcha">Check that you are a human user:</label>
                <div id="g-recaptcha" class="g-recaptcha" data-sitekey="<%= recaptcha %>"></div>
            </div>
            <% } %>

            <div class="form-group">
                <input type="submit" value="Short it!" class="btn btn-primary">
            </div>


        </form>
    </body>
    </div>
</html>