<!doctype html>
<html>
    <head>
        <title>RQE.es - Url Shortener</title>
        <script src='https://www.google.com/recaptcha/api.js'></script>
    </head>

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-fork-ribbon-css/0.2.0/gh-fork-ribbon.min.css" />
    <!--[if lt IE 9]>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/github-fork-ribbon-css/0.2.0/gh-fork-ribbon.ie.min.css" />
    <![endif]-->
    <body>
    <a class="github-fork-ribbon right-top" href="https://github.com/gtrabanco/rqe-es" title="Fork me on GitHub">Fork me on GitHub</a>
    
    <div class="page-header">
        <header>
            <h1>RQE.es</h1>
            <h2>Simple url shortener with <a href="https://nodejs.org">Node</a>, <a href="https://www.mongodb.com/">MongoDB</a> and
                <a href="https://docker.com">Docker</a></h2>
        </header>
    </div>

    <div class="col-md-12">
        <form action="/" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
            <input type="text" placeholder="https://" name="url">
            <% if (recaptcha) { %>
            <div class="g-recaptcha" data-sitekey="<%= recaptcha %>"></div>
            <% } %>
            <input type="submit" value="Shot it!">

            <% if(typeof status !== 'undefined' && status == 200) { %>
            <div class="alert alert-success">
                <p>Shortened URL: <%= data.url %></p>
            </div>
            <% } %>

            <% if(typeof status !== 'undefined' && status != 200) { %>
            <div class="alert alert-danger">
                <p>Error: <%= data.message %></p>
            </div>
            <% } %>
        </form>
    </body>
    </div>
</html>