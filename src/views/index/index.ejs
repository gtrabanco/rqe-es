<!doctype html>
<html>
    <head>
        <title>RQE.es - Url Shortener</title>
        <script src='https://www.google.com/recaptcha/api.js'></script>
    </head>
    <body>
    <form action="/" method="post" accept-charset="utf-8" enctype="application/x-www-form-urlencoded">
        <input type="text" placeholder="https://subdomain.example.com/my/custom/path" name="url">
        <% if (recaptcha) { %>
        <div class="g-recaptcha" data-sitekey="<%= recaptcha %>"></div>
        <% } %>
        <input type="submit" value="Shot it!">

        <% if(typeof status !== 'undefined' && status == 200) { %>
        <div class="info">
            <p>Shortened URL: <%= data.url %></p>
        </div>
        <% } %>

        <% if(typeof status !== 'undefined' && status != 200) { %>
        <div class="info">
            <p>Error: <%= data.message %></p>
        </div>
        <% } %>
    </form>
    </body>
</html>